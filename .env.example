# YoLink REST API Credentials
# Get these from https://www.yosmart.com/
YOLINK_CLIENT_ID=your_client_id_here
YOLINK_CLIENT_SECRET=your_client_secret_here

# YoLink MQTT / UAC Credentials (for tank sensors)
# Universal Access Credentials from YoLink developer portal
YOLINK_UAC_ID=your_uac_id_here
YOLINK_UAC_SECRET=your_uac_secret_here
YOLINK_HOME_ID=your_home_id_here

# Google Sheets (for later)
GOOGLE_CREDENTIALS={"type":"service_account",...}
CHLORINE_SHEET_ID=your_sheet_id
PRODUCTION_SHEET_ID=your_sheet_id

# Twilio SMS Configuration
# Sign up at https://www.twilio.com/ — get a phone number (~$1.15/mo)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15558675309
ADMIN_PHONE_NUMBER=+15551234567

# Database (SQLite file path)
DB_PATH=./data/alerts.db

# Google OAuth (dashboard login)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Application type: Web application
# Authorized redirect URIs: https://your-app.fly.dev/auth/google/callback
#   (also add http://localhost:3000/auth/google/callback for local dev)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Session secret — generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_session_secret

# Server
PORT=3000
